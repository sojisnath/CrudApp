@model CrudApp.Models.EmployeeDetail

@{
    ViewData["Title"] = "Edit";
}



<style>



    p {
        margin-left: 1100px;
    }

    h2 {
        background-color: #f0f0f0;
        margin-left: 500px;
    }

    div {
        justify-content: center;
        background-color: #f0f0f0;
    }
</style>




<h2>Update Employee Details</h2>


<hr />


<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmpId" />

            <div class="form-group row">
                <label asp-for="EmpCode" class="col-sm-3 col-form-label">EMPLOYEE CODE</label>
                <div class="col-sm-9">
                    <input asp-for="EmpCode" class="form-control" />
                    <span asp-validation-for="EmpCode" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="EmpName" class="col-sm-3 col-form-label">NAME</label>
                <div class="col-sm-9">
                    <input asp-for="EmpName" class="form-control" />
                    <span asp-validation-for="EmpName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="EmpDesignation" class="col-sm-3 col-form-label">DESIGNATION</label>
                <div class="col-sm-9">
                    <input asp-for="EmpDesignation" class="form-control" />
                    <span asp-validation-for="EmpDesignation" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="EmpDepartment" class="col-sm-3 col-form-label">DEPARTMENT</label>
                <div class="col-sm-9">
                    <input asp-for="EmpDepartment" class="form-control" />
                    <span asp-validation-for="EmpDepartment" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="EmpMobileNumber" class="col-sm-3 col-form-label">MOBILE NUMBER</label>
                <div class="col-sm-9">
                    <input asp-for="EmpMobileNumber" class="form-control" />
                    <span asp-validation-for="EmpMobileNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="EmpEmailId" class="col-sm-3 col-form-label">EMAIL-ID</label>
                <div class="col-sm-9">
                    <input asp-for="EmpEmailId" class="form-control" />
                    <span asp-validation-for="EmpEmailId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="EmpSalary" class="col-sm-3 col-form-label">SALARY</label>
                <div class="col-sm-9">
                    <input asp-for="EmpSalary" class="form-control" />
                    <span asp-validation-for="EmpSalary" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="EmpAddress" class="col-sm-3 col-form-label">ADDRESS</label>
                <div class="col-sm-9">
                    <input asp-for="EmpAddress" class="form-control" />
                    <span asp-validation-for="EmpAddress" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-sm-9 offset-sm-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>




<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
