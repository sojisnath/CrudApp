{
    <div class="pagination-container">
        <nav>
            <ul class="pagination">
                @for (int i = 1; i <= pageCount; i++)
                {
                    <li class="page-item @(currentPage == i ? "active" : "")">
                        <a class="page-link" href="?currentPage=@i">@i</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
